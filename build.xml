<?xml version="1.0"?>
<project name="bjoern" default="jar" basedir=".">

  <property environment="env"/>
  <property name="src.dir" location="src" />
  <property name="build.dir" location="bin" />
  <property name="jar.dir" location="jar" />

  <!-- Add jars to the classpath -->
  <path id="bjoern.classpath">
    <pathelement location="bin"/>
    <pathelement location="${jar.dir}/commons-lang3-3.3.2.jar"/>
    <pathelement location="${jar.dir}/json-20141113.jar"/>
    <pathelement location="${jar.dir}/opencsv-3.5.jar"/>
    <pathelement location="${jar.dir}/commons-cli-1.2.jar"/>
    <pathelement location="${jar.dir}/radare2.jar"/>

    <pathelement location="${jar.dir}/orientdb/blueprints-core-2.6.0.jar"/>
    <pathelement location="${jar.dir}/orientdb/gremlin-groovy-2.6.0.jar"/>
    <pathelement location="${jar.dir}/orientdb/gremlin-java-2.6.0.jar"/>
    <pathelement location="${jar.dir}/orientdb/groovy-1.8.9.jar"/>
    <pathelement location="${jar.dir}/orientdb/jna-4.0.0.jar"/>
    <pathelement location="${jar.dir}/orientdb/jna-platform-4.0.0.jar"/>
    <pathelement location="${jar.dir}/orientdb/orientdb-lucene-2.1.2-dist.jar"/>
    <pathelement location="${jar.dir}/orientdb/orientdb-client-2.1.2.jar"/>
    <pathelement location="${jar.dir}/orientdb/orientdb-core-2.1.2.jar"/>
    <pathelement location="${jar.dir}/orientdb/orientdb-enterprise-2.1.2.jar"/>
    <pathelement location="${jar.dir}/orientdb/orientdb-graphdb-2.1.2.jar"/>
    <pathelement location="${jar.dir}/orientdb/pipes-2.6.0.jar"/>
    <pathelement location="${jar.dir}/commons-cli-1.2.jar"/>
    <pathelement location="${jar.dir}/orientdb/concurrentlinkedhashmap-lru-1.4.1.jar"/>
  </path>

  <pathconvert property="mf.classpath" pathsep=" ">
    <path refid="bjoern.classpath" />
    <flattenmapper/>
  </pathconvert>

  <echo>${mf.classpath}</echo>


  <target name="jar" depends="clean,makedir,compile">
    <jar destfile="${build.dir}/bjoern-radare.jar"
	 basedir="${build.dir}"
	 includes="**/*.class">
      <manifest>
	<attribute name="Main-Class" value="tools.radareExporter.Main" />
      </manifest>
      <fileset dir="${build.dir}" includes="**/*.class" />
      <zipgroupfileset dir="${jar.dir}" includes="**/*.jar" />
    </jar>
  </target>

  <target name="clean">
    <delete dir="${build.dir}" />
  </target>

  <target name="makedir">
    <mkdir dir="${build.dir}" />
  </target>

  <target name="compile">
    <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false">
	<src path="src"/>
	<classpath refid="bjoern.classpath"/>
    </javac>
  </target>

  <target name="orientdbImporter" depends="compile">

    <mkdir dir="tmp_"/>
    <copy flatten="true" todir="tmp_" includeemptydirs="false">
	<fileset dir="jar">
	    <include name="**/*.jar" />
	</fileset>
    </copy>

    <jar destfile="${build.dir}/orientdbImporter.jar"
	 basedir="${build.dir}"
	 includes="**/*.class"
	 duplicate="preserve">
      <manifest>
	<attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
	<attribute name="Rsrc-Main-Class" value="tools.orientdbImporter.BatchImporter" />
	<attribute name="Class-Path" value="."/>
	<attribute name="Rsrc-Class-Path" value="./ ${mf.classpath}" />

      </manifest>
      <fileset dir="${build.dir}" includes="**/*.class" />
      <fileset dir="tmp_"/>
      <zipfileset src="${jar.dir}/jar-in-jar-loader.zip"/>
    </jar>
    <delete dir="tmp_" />
  </target>

</project>
